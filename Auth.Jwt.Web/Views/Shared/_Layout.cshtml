@using Auth.Jwt.Web.Controllers.Mvc
@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang='@System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName'>
    <head>
        <meta charset='utf-8' />
        <meta content='width=device-width, initial-scale=1.0'
              name='viewport' />
        <title>@ViewData["Title"] - Auth.Jwt.Web</title>
        <link href='~/css/site.css'
              rel='stylesheet' />
    </head>
    <body auit='@ViewData[BaseController.Auit]'>
        <header>
            @if (User.Identity.IsAuthenticated)
            {
                <a id='logout' asp-action='Logout'
                   asp-controller='Authenticate'>Logout</a>
            }
        </header>

        <main>
            @RenderBody()
        </main>

        <footer>
            <div>
                &copy; 2022 - Auth.Jwt.Web -
                <a asp-action='Privacy'
                   asp-area=''
                   asp-controller='Home'>
                    Privacy
                </a>
            </div>
        </footer>
        <script asp-append-version='true'
                src='~/js/site.js'
                defer></script>
        @await RenderSectionAsync("Scripts", false)
    </body>
</html>
