@model Auth.Jwt.Web.ViewModels.SignUp.SignUpViewModel
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = localizer["Title"];
}
<h1>@localizer["SignUp"]</h1>
<form method='post'>
    @Html.ValidationSummary(true)
    <label asp-for='UserName'></label>
    <input asp-for='UserName' />
    <span asp-validation-for='UserName'></span>
    <label asp-for='Password'></label>
    <input asp-for='Password' />
    <span asp-validation-for='Password'></span>
    <label asp-for='PasswordRepeat'></label>
    <input asp-for='PasswordRepeat' />
    <span asp-validation-for='PasswordRepeat'></span>
    <input type='submit'
           value='@localizer["Submit"]' />
</form>
<a asp-action='SignIn'>
    @localizer["SignIn"]
</a>
